<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    
    <class name="com.member.domain.Member" table="member" lazy="false">
        <id name="email" type="string">
            <column name="email" length="30" not-null="false" />
        </id>
        <property name="name" type="string">
            <column name="name" length="30" not-null="false" />
        </property>
        <property name="pass" type="string">
            <column name="pass" length="30" not-null="false" />
        </property>
    </class>
</hibernate-mapping>